/* pages/profile/profile.wxss */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息头部 */
.profile-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx 80rpx;
  margin-bottom: -40rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
}

.user-stats {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.stat-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stat-divider {
  color: rgba(255, 255, 255, 0.5);
}

/* 学习数据统计 */
.stats-card {
  margin: 40rpx 30rpx 20rpx;
  padding: 40rpx 30rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.stats-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 12rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

/* 功能菜单 */
.menu-card {
  margin: 0 30rpx 30rpx;
  padding: 0;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.menu-title {
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 退出登录按钮 */
.logout-btn {
  margin: 0 30rpx;
  background: #fff;
  color: #ff4d4f;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 28rpx 0;
  border: 1rpx solid #ff4d4f;
}
