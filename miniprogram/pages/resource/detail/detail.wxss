/* pages/resource/detail/detail.wxss */
.container {
  padding-bottom: 40rpx;
  background-color: #f5f5f5;
}

/* 封面区域 */
.cover-section {
  width: 100%;
  height: 420rpx;
  background-color: #000;
}

.cover-image {
  width: 100%;
  height: 100%;
}

/* 信息区域 */
.info-section {
  margin: 20rpx;
  padding: 30rpx;
}

.resource-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.resource-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  border-radius: 4rpx;
  background-color: #f0f0f0;
  color: #666;
}

.tag-primary {
  background-color: #e6f7ff;
  color: #1890ff;
}

.tag-info {
  background-color: #f0f5ff;
  color: #597ef7;
}

.resource-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

/* 内容区域 */
.content-section {
  margin: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.video-player {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  background-color: #000;
}

.document-section {
  padding: 40rpx 0;
  text-align: center;
}

.document-name {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.question-section {
  padding: 40rpx 0;
  text-align: center;
}

/* 笔记区域 */
.notes-section {
  margin: 20rpx;
  padding: 30rpx;
}

.note-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background-color: #fafafa;
}

.save-note-btn {
  width: 100%;
}

/* 相关资源区域 */
.related-section {
  margin: 20rpx;
  padding: 30rpx;
}

.related-list {
  margin-top: 20rpx;
}

.related-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.related-item:last-child {
  border-bottom: none;
}

.related-cover {
  width: 120rpx;
  height: 90rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.related-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.related-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.related-subject {
  font-size: 24rpx;
  color: #999;
}

/* 通用样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.btn-primary {
  background-color: #1890ff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.loading {
  padding: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.error {
  padding: 60rpx;
  text-align: center;
}

.error text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}
