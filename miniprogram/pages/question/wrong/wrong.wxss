/* pages/question/wrong/wrong.wxss */
.container {
  min-height: 100vh;
  padding-bottom: 120rpx;
  background-color: #f5f5f5;
}

/* 标签栏 */
.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.tab-item {
  flex: 1;
  padding: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1890ff;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

/* 错题列表 */
.wrong-list {
  padding: 20rpx;
}

.wrong-item {
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.question-type {
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  border-radius: 4rpx;
  color: #fff;
}

.type-SINGLE_CHOICE {
  background-color: #52c41a;
}

.type-MULTIPLE_CHOICE {
  background-color: #1890ff;
}

.type-TRUE_FALSE {
  background-color: #faad14;
}

.type-SHORT_ANSWER {
  background-color: #722ed1;
}

.wrong-count {
  font-size: 24rpx;
  color: #f5222d;
  font-weight: bold;
}

.question-content {
  margin-bottom: 20rpx;
}

.question-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.question-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.question-meta {
  font-size: 24rpx;
  color: #999;
  flex: 1;
}

.btn-master {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #52c41a;
  background-color: #f6ffed;
  border: 1rpx solid #b7eb8f;
  border-radius: 4rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading {
  padding: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

/* 底部按钮栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.practice-btn {
  width: 100%;
  background-color: #1890ff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 32rpx;
}

/* 通用样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.btn-primary {
  background-color: #1890ff;
  color: #fff;
}
