/* pages/question/list/list.wxss */
.container {
  padding-bottom: 120rpx;
  background-color: #f5f5f5;
}

/* 筛选栏 */
.filter-bar {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.filter-section {
  margin-bottom: 20rpx;
}

.filter-section:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
}

.filter-option {
  padding: 12rpx 24rpx;
  margin-right: 20rpx;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  transition: all 0.3s;
}

.filter-option.active {
  background-color: #1890ff;
  color: #fff;
}

/* 题目列表 */
.question-list {
  padding: 0 20rpx;
}

.question-item {
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.question-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.question-type {
  padding: 6rpx 16rpx;
  margin-right: 10rpx;
  font-size: 22rpx;
  border-radius: 4rpx;
  color: #fff;
}

.type-SINGLE_CHOICE {
  background-color: #52c41a;
}

.type-MULTIPLE_CHOICE {
  background-color: #1890ff;
}

.type-TRUE_FALSE {
  background-color: #faad14;
}

.type-SHORT_ANSWER {
  background-color: #722ed1;
}

.question-difficulty {
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  border-radius: 4rpx;
  color: #fff;
}

.diff-EASY {
  background-color: #52c41a;
}

.diff-MEDIUM {
  background-color: #faad14;
}

.diff-HARD {
  background-color: #f5222d;
}

.question-content {
  margin-bottom: 20rpx;
}

.question-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.question-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.question-meta {
  font-size: 24rpx;
  color: #999;
}

.question-stat {
  font-size: 24rpx;
  color: #1890ff;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  padding: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #1890ff;
}

.loading {
  padding: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

/* 底部栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.practice-btn {
  width: 100%;
  background-color: #1890ff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 32rpx;
}

/* 通用样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
