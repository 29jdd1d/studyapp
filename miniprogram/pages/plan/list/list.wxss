/* pages/plan/list/list.wxss */
.container {
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 40rpx;
  background-color: #f5f5f5;
}

/* 学习计划列表 */
.plan-list {
  margin-bottom: 20rpx;
}

.plan-item {
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.plan-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
}

.plan-status {
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  border-radius: 40rpx;
  color: #fff;
  flex-shrink: 0;
}

.status-ACTIVE {
  background-color: #52c41a;
}

.status-COMPLETED {
  background-color: #1890ff;
}

.status-PAUSED {
  background-color: #faad14;
}

.plan-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.plan-info {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.info-item {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.plan-progress {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(to right, #1890ff, #52c41a);
  border-radius: 6rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: bold;
  width: 80rpx;
  text-align: right;
}

.plan-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.plan-time {
  font-size: 24rpx;
  color: #999;
}

.plan-actions {
  display: flex;
  gap: 10rpx;
}

.btn-view {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #1890ff;
  background-color: #e6f7ff;
  border: 1rpx solid #91d5ff;
  border-radius: 4rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 150rpx 40rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.btn-create {
  width: 300rpx;
  margin: 0 auto;
}

/* 加载状态 */
.loading {
  padding: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

/* 浮动按钮 */
.float-btn {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #1890ff;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.float-btn text {
  font-size: 60rpx;
  color: #fff;
  line-height: 1;
}

/* 通用样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.btn-primary {
  background-color: #1890ff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}
