/* pages/community/checkin/checkin.wxss */
.container {
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 40rpx;
  background-color: #f5f5f5;
}

/* 统计卡片 */
.stats-card {
  margin-bottom: 20rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
}

.continuous-days {
  font-size: 36rpx;
  font-weight: bold;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 打卡卡片 */
.checkin-card {
  margin-bottom: 20rpx;
  padding: 60rpx 30rpx;
}

.checkin-status {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.checkin-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.checkin-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.btn-checkin {
  width: 300rpx;
  padding: 24rpx;
  font-size: 32rpx;
  border-radius: 40rpx;
}

.checkin-status.checked .checkin-text {
  color: #52c41a;
  font-weight: bold;
}

.checkin-time {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.checkin-note {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  max-width: 500rpx;
}

/* 日历卡片 */
.calendar-card {
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.calendar-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.calendar-month {
  font-size: 26rpx;
  color: #666;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
}

.weekday {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 10rpx 0;
}

.calendar-day {
  position: relative;
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #333;
  border-radius: 8rpx;
}

.calendar-day.other-month {
  color: #ccc;
}

.calendar-day.today {
  background-color: #e6f7ff;
  color: #1890ff;
  font-weight: bold;
}

.calendar-day.checked {
  background-color: #f6ffed;
  color: #52c41a;
  font-weight: bold;
}

.check-mark {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  font-size: 20rpx;
  color: #52c41a;
}

/* 记录卡片 */
.records-card {
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.records-list {
  margin-top: 20rpx;
}

.record-item {
  display: flex;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-date {
  width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 25rpx;
  flex-shrink: 0;
}

.record-day {
  font-size: 48rpx;
  font-weight: bold;
  color: #1890ff;
  line-height: 1;
  margin-bottom: 8rpx;
}

.record-month {
  font-size: 24rpx;
  color: #999;
}

.record-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-time {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.record-hours {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.record-note {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.empty-records {
  padding: 60rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

/* 打卡对话框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  min-height: 150rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  padding: 20rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background-color: #1890ff;
  color: #fff;
}

/* 通用样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.btn-primary {
  background-color: #1890ff;
  color: #fff;
  border: none;
}

.loading {
  padding: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}
