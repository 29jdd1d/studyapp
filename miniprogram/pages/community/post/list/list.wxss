/* pages/community/post/list/list.wxss */
.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
  background-color: #f5f5f5;
}

/* 分类标签 */
.category-tabs {
  background-color: #fff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.tabs-scroll {
  white-space: nowrap;
}

.tab-item {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin: 0 10rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background-color: #1890ff;
  color: #fff;
}

/* 帖子列表 */
.post-list {
  padding: 0 20rpx;
}

.post-item {
  margin-bottom: 20rpx;
  padding: 30rpx;
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.author-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.author-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.post-category {
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  color: #1890ff;
  background-color: #e6f7ff;
  border-radius: 4rpx;
  flex-shrink: 0;
}

/* 帖子内容 */
.post-content {
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.5;
  margin-bottom: 15rpx;
  display: block;
}

.post-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 帖子图片 */
.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 20rpx;
}

.post-image {
  width: calc((100% - 20rpx) / 3);
  height: 200rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
}

.post-image.single {
  width: 100%;
  height: 400rpx;
}

/* 帖子底部 */
.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.post-stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.stat-item .icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

.post-action {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.post-action .icon {
  font-size: 36rpx;
  transition: transform 0.3s;
}

.post-action .icon.liked {
  animation: like 0.3s;
}

@keyframes like {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.3);
  }
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  padding: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #1890ff;
}

.loading {
  padding: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

/* 浮动按钮 */
.float-btn {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #1890ff;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.float-btn text {
  font-size: 60rpx;
  color: #fff;
  line-height: 1;
}

/* 通用样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
